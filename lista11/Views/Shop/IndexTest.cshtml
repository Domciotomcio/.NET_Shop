@model dynamic

@{
    ViewBag.Title = "IndexTest";
}
<h1>@ViewBag.Title</h1>

<p>Wybor kategorii</p>

<form asp-action="Index">
    <select class="form-control" asp-items="ViewBag.CategoryId">
    </select>
    <input type="submit" value="Pokaż artykuły" class="btn btn-primary" />
</form>

<p>pierwsze artykuly</p>

<table class="table">
    <tbody>
        @foreach (Article article in Model.Articles)
        {
            <tr>
                <td>@article.Name</td>
                <td>
                @using (Html.BeginForm("AddToCart", "Shop", new { id = article.Id }))
                {
                            <button type="submit" class="btn btn-success">Add to cart</button>
                }
                </td>
            </tr>
        }
    </tbody>
</table>
