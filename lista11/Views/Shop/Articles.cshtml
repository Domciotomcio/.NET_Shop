@model IEnumerable<AW_lab10.Models.Article>

@{
    ViewData["Title"] = "IndexList";
}


<h2>Przedmioty</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.Name)
                </td>
                <td>
                    <img width="100" height="100" src="@Html.DisplayFor(modelItem => item.ImagePath)" />
                </td>
                <td>
                    @using (Html.BeginForm("AddCartEl", "Shop", new { id = item.Id }))
                    {
                        <button type="submit" class="btn btn-primary">Dodaj do koszyka</button>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="Cart" class="btn btn-primary">Koszyk</a>
    <a asp-action="Index" class="btn btn-secondary">Powrót do wyboru kategorii</a>
</div>
